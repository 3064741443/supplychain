  <sql id="Base_Column_List">
    ID, COMBILE_CODE, BILL_TYPE_CODE, BILL_TYPE_NAME, BILL_NUMBER, TIME, SALES_CODE, 
    SALES_NAME, CUSTOMER_CODE, CUSTOMER_NAME, SALE_GROUP_CODE, SALE_GROUP_NAME, STATEMENT_CURRENCY_CODE, 
    STATEMENT_CURRENCY_NAME, MATERIAL_CODE, MATERIAL_NAME, SALES_UNIT_CODE, SALES_UNIT_NAME, 
    SALES_QUANTITY, PRICE, GIFT, TAX_RATE, TAKE_GOODS_DATE, STATEMENT_ORGANIZE_CODE, 
    STATEMENT_ORGANIZE_NAME, RESERVE_TYPE, WAREHOUSE_CODE, WAREHOUSE_NAME, QUANTITY, 
    CREATED_BY, CREATED_DATE, UPDATED_BY, UPDATED_DATE, DELETED_FLAG,WORK_TYPE
  </sql>
  
  <update id="deleteStatementFinanceCombileByDate"
            parameterType="cn.com.glsx.supplychain.model.am.StatementFinanceCombile">
        update am_statement_finance_combile
        <set>
            DELETED_FLAG = "Y",
            <if test="updatedBy != null">
                UPDATED_BY = #{updatedBy,jdbcType=VARCHAR},
            </if>
            <if test="updatedDate != null">
                UPDATED_DATE = #{updatedDate,jdbcType=TIMESTAMP},
            </if>
        </set>
        where DATE_FORMAT(TIME,'%Y%m') = DATE_FORMAT(#{time,jdbcType=TIMESTAMP},'%Y%m') and FINANCE_CUSTOMER_CODE = #{financeCustomerCode,jdbcType=VARCHAR}
        <if test="workType != null and workType !=''">
    		and WORK_TYPE = #{workType,jdbcType=VARCHAR}
    	</if>
    </update>
    
    <select id="listStatementFinanceCombile" parameterType="cn.com.glsx.supplychain.model.am.StatementFinanceCombile"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from am_statement_finance_combile
        where DELETED_FLAG = "N"
        <if test="customerCode != null and customerCode != ''">
            AND (CUSTOMER_CODE LIKE "%"#{customerCode,jdbcType=VARCHAR}"%"
        </if>
        <if test="customerName != null and customerName !=''">
            or CUSTOMER_NAME LIKE "%"#{customerName,jdbcType=VARCHAR}"%")
        </if>
        <if test="materialCode != null and materialCode != ''">
            AND (MATERIAL_CODE LIKE "%"#{materialCode,jdbcType=VARCHAR}"%"
        </if>
        <if test="materialName != null and materialName !=''">
            or MATERIAL_NAME LIKE "%"#{materialName,jdbcType=VARCHAR}"%")
        </if>
        <if test="startDate != null">
            AND TIME &gt;= #{startDate,jdbcType=TIMESTAMP}
        </if>
        <if test="endDate != null">
            AND TIME &lt;= #{endDate,jdbcType=TIMESTAMP}
        </if>
        <if test="workType != null and workType !=''">
        	AND WORK_TYPE = #{workType,jdbcType=VARCHAR} 
        </if>
        ORDER BY ID DESC
    </select>
    
    <select id="exportStatementFinanceCombileExit" parameterType="cn.com.glsx.supplychain.model.am.StatementFinanceCombile"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
