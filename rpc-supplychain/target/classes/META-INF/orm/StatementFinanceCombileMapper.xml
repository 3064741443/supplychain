        </if>
        <if test="startDate != null">
            AND TIME &gt;= #{startDate,jdbcType=TIMESTAMP}
        </if>
        <if test="endDate != null">
            AND TIME &lt;= #{endDate,jdbcType=TIMESTAMP}
        </if>
        <if test="workType != null and workType !=''">
        	AND WORK_TYPE = #{workType,jdbcType=VARCHAR} 
